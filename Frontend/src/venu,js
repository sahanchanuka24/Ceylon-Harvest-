import React, { useState } from 'react';

function App() {
  const [showImage, setShowImage] = useState(false);

  return (
    <div>
      <button onClick={() => setShowImage(!showImage)}>
        {showImage ? 'Hide Image' : 'Show Image'}
      </button>
      {showImage && (
        <img 
          src="https://via.placeholder.com/150"
          alt="Placeholder"
          style={{ marginTop: 10 }}
        />
      )}
    </div>
  );
}

export default App;
