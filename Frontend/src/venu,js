import React, { useState } from 'react';

function App() {
  const [show, setShow] = useState(true);

  return (
    <div>
      <button onClick={() => setShow(!show)}>
        {show ? 'Hide Text' : 'Show Text'}
      </button>
      {show && <p>This is some toggleable content!</p>}
    </div>
  );
}

export default App;
